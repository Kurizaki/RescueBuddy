<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RescueBuddy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:RescueBuddy.Pages"
    FlyoutBehavior="Disabled"
    Title="RescueBuddy"
    TabBarBackgroundColor="#1F1F1F"
    TabBarForegroundColor="white"
    TabBarTitleColor="white"
    TabBarUnselectedColor="white"
    Shell.NavBarIsVisible="False">
    

    <TabBar>
        <Tab Title="Home" Icon="home_icon.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate pages:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Settings" Icon="settings_icon.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate pages:SettingsPage}"
                Route="SettingsPage" />
        </Tab>
        <Tab Title="Logs" Icon="logs_icon.png">
            <ShellContent
        Title="Logs"
        ContentTemplate="{DataTemplate pages:LogPage}"
        Route="LogPage" />
        </Tab>
    </TabBar>

</Shell>
