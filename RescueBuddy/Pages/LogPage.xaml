<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RescueBuddy.Pages.LogPage"
             Title="Logs">
    <StackLayout>
        <ListView x:Name="LogsListView"
                  ItemsSource="{Binding Logs}"
                  SelectedItem="{Binding SelectedLog}"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding LogText}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Play Audio" Clicked="PlayAudioButton_Clicked" />

        <ScrollView>
            <StackLayout BindableLayout.ItemsSource="{Binding SelectedLogDetails}" Margin="10">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding}" />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>